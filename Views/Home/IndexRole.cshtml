@model IEnumerable<Identity.Models.RoleStore>

@{
    ViewData["Title"] = "IndexRole";
}

<h1>IndexRole</h1>

<p>
    <a asp-action="CreateRole">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Role)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Role)
            </td>
            <td>
                <a asp-action="EditRole" asp-controller="Home" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="DeleteRole" asp-controller="Home" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
